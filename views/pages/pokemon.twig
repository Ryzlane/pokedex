{{ include('partials/header.twig', {title: pokemon.name}) }}


<div class="div-to-center">
    <div class="center">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{ base_url() ~ '/assets/img' ~ pokemon.picture }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ pokemon.name }}</h5>
                <p class="card-text">A unique {{ pokemon.name }}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Type : {{ type.name }}</li>
                <li class="list-group-item">Height : {{ pokemon.height }}</li>
                <li class="list-group-item">Weight : {{ pokemon.weight }}</li>
            </ul>
            <div class="card-body">
                <a href="{{ path_for('type', { slug: type.slug, pageNumber: 1 }) }}" class="card-link">See type</a>
                <a href="{{ path_for('random') }}" class="card-link">Random pokemon</a>
            </div>
        </div>
    </div>
</div>


{{ include('partials/footer.twig') }}